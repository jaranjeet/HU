<div class = "container">
  <div class="lead well">
    <div class="media">
      <img class="mr-3" src=<%= asset_path('user') %> alt="Generic placeholder image" height="50px">
      <div class="media-body">
        <h5 class="mt-0"><%= @question.email %> asked</h5>
        <%= @question.body %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      
      <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">Submit New Answer </button>
      <%= render 'home/new_answer_form' %>
      <% @question.answers.each do |answer| %>
      <div class="media">
        <img class="mr-3" src=<%= asset_path('user') %> alt="Generic placeholder image" height="50px">
        <div class="media-body">
          <h5 class="mt-0"><%= answer.email %> answered:</h5>
          <div> <%= time_ago_in_words answer.created_at %></div>
          <%= truncate answer.body, length: 30 %>
        </div>
      </div>
      <% end %>
      <% if @question.answers.empty? %>
        <div class="alert alert-info">Nothing here yet. Be the first to answer.</div>
      <% end %>
      </div>
  </div>
</div>
